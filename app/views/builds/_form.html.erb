<%= form_for([@product,@version,@build], html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @build.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@build.errors.count, "error") %> prohibited this build from being saved:</h4>

      <ul>
      <% @build.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group row">
      <%= f.label :product, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= @product.name %>
      </div>
  </div>
  <div class="form-group row">
      <%= f.label :version, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= @version.name %>
        <%= f.text_field :version_id , class: "invisible", value: @version._id %>
      </div>
  </div>
  <div class="form-group row">
      <%= f.label :name, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control" %>
      </div>
  </div>
  <div class="form-group row">
      <%= f.label :description, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :description, class: "form-control" %>
      </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
