<div class="container m-t-1 m-b-1">
  <%= link_to new_product_version_build_path(@product,@version), class: 'btn btn-primary pull-xs-right m-x-auto' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Build
  <% end %>
  <h2>Builds</h2>
</div>

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
        
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @builds) do |build| %>
            <td><%= link_to build.name, product_version_build_path(@product,@version,build) %></td>
            <td><%= build.description %></td>
            <td>
            <%= link_to 'Show', product_version_build_path(@product,@version,build), class: "btn btn-outline-primary btn-sm" %>
            <%= link_to 'Edit', edit_product_version_build_path(@product,@version,build), class: "btn btn-primary btn-sm" %>
            <%= link_to 'Destroy', product_version_build_path(@product,@version,build), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
        </td>
      <% end %>
    </tbody>
  </table>
</div>
