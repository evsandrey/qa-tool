<div class="container m-t-1 m-b-1">
  <%= link_to new_product_version_category(@product,@version), class: 'btn btn-primary pull-xs-right m-x-auto' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Category
  <% end %>
  <h2>categories</h2>
</div>

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
        
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @categories) do |category| %>
            <td><%= link_to category.name, product_version_category_path(@product,@version,category)  %></td>
            <td><%= category.description %></td>
            <td>
            <%= link_to 'Show', product_version_category_path(@product,@version,category), class: "btn btn-outline-primary btn-sm" %>
            <%= link_to 'Edit', edit_product_version_category_path(@product,@version,category), class: "btn btn-primary btn-sm" %>
            <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
        </td>
      <% end %>
    </tbody>
  </table>
</div>
