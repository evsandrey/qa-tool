<div class="container m-t-1 m-b-1">
  <%= link_to categories_path, class: 'btn btn-outline-primary pull-md-right m-l-1' do %>
    Back
  <% end %>
  <%= link_to edit_category_path(@category), class: 'btn btn-info pull-md-right' do %>
    Edit
  <% end %>
  <h1>Show category</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @category.name %></dd>

  <dt>Description:</dt>
  <dd><%= @category.description %></dd>

</dl>
