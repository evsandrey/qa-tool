<div class="container m-t-1 m-b-1">
  <%= link_to hosts_path, class: 'btn btn-outline-primary pull-md-right m-l-1' do %>
    Back
  <% end %>
  <%= link_to edit_host_path(@host), class: 'btn btn-info pull-md-right' do %>
    Edit
  <% end %>
  <h1>Show host</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @host.name %></dd>

  <dt>Description:</dt>
  <dd><%= @host.description %></dd>

</dl>
