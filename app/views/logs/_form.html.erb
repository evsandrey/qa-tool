<%= form_for(@log, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @log.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@log.errors.count, "error") %> prohibited this log from being saved:</h4>

      <ul>
      <% @log.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    
      <%= f.label :module_name, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :module_name, class: "form-control" %>
      </div>
    
  </div>
  <div class="form-group row">
    
      <%= f.label :level, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :level, class: "form-control" %>
      </div>
    
  </div>
  <div class="form-group row">
    
      <%= f.label :message, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_area :message, class: "form-control" %>
      </div>
    
  </div>
  <div class="form-group row">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
