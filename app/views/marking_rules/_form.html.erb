<%= form_for(@marking_rule, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @marking_rule.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@marking_rule.errors.count, "error") %> prohibited this marking_rule from being saved:</h4>

      <ul>
      <% @marking_rule.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    
      <%= f.label :name, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    
  </div>
  <div class="form-group row">
    
      <%= f.label :pattern, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :pattern, class: "form-control" %>
      </div>
    
  </div>
  <div class="form-group row">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
