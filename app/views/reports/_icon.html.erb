<div class="report-icon" id="<%= report.class == Report ? report._id : report.report_id %>" <%= raw("data-toggle=\"tooltip\" data-placement=\"right\" title=\"#{report.comment}\"") if !report.comment.blank? %> >
    <% if report.class == Report %>
        <a href='<%= show_direct_report_path(report) %>' target='_blank' data-no-turbolinks='true'>
    <% else %>
        <a href='<%= report.url if !report.url.blank? %>' target='_blank' data-no-turbolinks='true'>
    <% end %>
    <% if report.result %>
        <% if report.broken == "true" %>
            <img class="investigated-bg" src="/icons/Diff.png" />
        <% else %>
            <img class="investigated-bg" src="/icons/Passed.png" />
        <% end %>
    <% else %>
        <% if report.investigation_result.nil?%>
            <img class="investigated-bg" src="/icons/Failed.png" />
        <% else %>
            <div class="investigated-code"><b><%= report.investigation_result.class == InvestigationResult ? report.investigation_result.code : report.investigation_result %></b></div>
            <img class="investigated-bg" src="/icons/Warning.png" />
        <% end %>
    <% end %>
    </a>
</div>