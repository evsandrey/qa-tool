<%= form_for( "reports", url: investigation_update_path, html: { class: "form-horizontal", role: "form",method: "post" ,remote: true }) do |f| %>
  <div class="form-group row">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :investigation_result_id, InvestigationResult.all.collect {|a| [a.name, a._id]}, {}, {class: "form-control"} %>
    </div>
  </div>  
  <div class="form-group row">
    <%= f.label :comment, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :comment, class: "form-control" %>
      <%= f.text_field :report_id, class: "invisible", value: @report.id %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>