<div class="container m-t-1 m-b-1">
  <h2>Reports for <%= @product.name %> <%= @version.name %></h2>
</div>

<div class="container row">
<%= search_form_for @q , url: product_version_reports_path(@product,@version) ,:html => { :class => "form-inline" } do |f| %>
  <div class="form-group col-sm-3">
    <%= f.label "Error" %>
    <%= f.search_field :error_cont, :class => "form-control" %>
  </div>
  <div class="form-group col-sm-3">
    <%= f.label "Comment" %>
    <%= f.search_field :comment_cont, :class => "form-control" %>
  </div>
  <div class="form-group col-sm-3">
    <%= f.label "Custom" %>
    <%= f.search_field :custom_params_cont, :class => "form-control" %>
  </div>
  <div class="form-group col-sm-3 col-sm-bottom">
    <%= f.submit "Search", :class => "btn btn-primary" %>
  </div>
<% end %>
</div>

<div class="table-responsive">
    <table class="table table-striped" >
      <tr>
        <th></th>
        <th>Test</th>
        <th>Host</th>
        <th>Reported</th>
        <th>Comment</th>
        <th>Error</th>
      </tr>
      <% @reports.each do |report| %>
      <tr>
        <td><%= render :partial => 'reports/icon', :locals => {:report => report } %></td>
        <td><%= link_to report.test_case.name, product_version_test_case_path(@product,@version,report.test_case) if !report.test_case.blank?  %></td>
        <td><%= link_to report.host.name, product_version_host_path(@product,@version,report.host)  if !report.host.blank?%></td>
        <td><%= report.created_at.strftime("%d %B %H:%M") %></td>
        <td><%= report.comment %></td>
        <td class="first-col text-cut"><%= report.error %></td>
      </tr>
      <% end %>
    </table>
</div>
<%= paginate @reports %>