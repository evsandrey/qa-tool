<div class="container m-t-1 m-b-1">
  <%= link_to new_report_path, class: 'btn btn-primary pull-xs-right m-x-auto' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Report
  <% end %>
  <h2>reports</h2>
</div>

<div class="container row">
<%= search_form_for @q ,:html => { :class => "form-inline" } do |f| %>
  <div class="form-group col-sm-3">
    <%= f.label "Test case" %>
    <%= f.search_field :test_case_name_cont, :class => "form-control" %>
  </div>
  <div class="form-group col-sm-3">
    <%= f.label "Error" %>
    <%= f.search_field :level_cont, :class => "form-control" %>
  </div>
  <div class="form-group col-sm-3 col-sm-bottom">
    <%= f.submit "Search", :class => "btn btn-primary" %>
  </div>
<% end %>
</div>

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
            
            <th>Result</th>
            <th>Comment</th>
            <th></th>
            <th></th>
        
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @reports) do |report| %>
            
            <td><%= report.result %></td>
            <td><%= report.comment %></td>
            <td><%= report.custom_params %></td>
            <td>
            <%= link_to 'Show', report, class: "btn btn-outline-primary btn-sm" %>
            <%= link_to 'Edit', edit_report_path(report), class: "btn btn-primary btn-sm" %>
            <%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
        </td>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @reports %>