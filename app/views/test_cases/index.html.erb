<div class="container m-t-1 m-b-1">
  <%= link_to new_product_version_test_case_path(@product,@version), class: 'btn btn-primary pull-xs-right m-x-auto' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Suite
  <% end %>
  <h2>Test cases for version <%= @version.name %></h2>
</div>

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Custom params</th>
            <th></th>
        
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @test_cases) do |test_case| %>
            <td><%= link_to test_case.name, product_version_test_case_path(@product,@version,test_case) %></td>
            <td><%= test_case.description %></td>
            <td><%= test_case.custom_params %></td>
            <td>
            <%= link_to 'Edit', edit_product_version_test_case_path(@product,@version,test_case), class: "btn btn-primary btn-sm" %>
            <%= link_to 'Destroy', product_version_test_case_path(@product,@version,test_case), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
        </td>
      <% end %>
    </tbody>
  </table>
</div>
