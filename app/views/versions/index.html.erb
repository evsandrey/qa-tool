<div class="container m-t-1 m-b-1">
  <%= link_to new_product_version_path(@product), class: 'btn btn-primary pull-xs-right m-x-auto' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Version
  <% end %>
  <h2>versions</h2>
</div>

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Vcs</th>
            <th></th>
        
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @versions) do |version| %>
            <td><%= version.name %></td>
            <td><%= version.description %></td>
            <td><%= version.vcs %></td>
            <td>
            <%= link_to 'Show', product_version_path(@product, version), class: "btn btn-outline-primary btn-sm" %>
            <%= link_to 'Edit', edit_product_version_path(@product, version), class: "btn btn-primary btn-sm" %>
            <%= link_to 'Destroy', product_version_path(@product, version), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %>
        </td>
      <% end %>
    </tbody>
  </table>
</div>
