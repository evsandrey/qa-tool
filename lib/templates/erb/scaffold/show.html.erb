<div class="container m-t-1 m-b-1">
  <%%= link_to <%= index_helper %>_path, class: 'btn btn-outline-primary pull-md-right m-l-1' do %>
    Back
  <%% end %>
  <%%= link_to edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), class: 'btn btn-primary pull-md-right' do %>
    Edit
  <%% end %>
  <h1>Show <%= singular_table_name %></h1>
</div>

<dl class="dl-horizontal">
  <%- attributes.each do |attribute| -%>
  <dt><%= attribute.human_name %>:</dt>
  <dd><%%= @<%= singular_table_name %>.<%= attribute.name %> %></dd>

  <%- end -%>
</dl>
